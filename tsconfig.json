{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true
    },
    "exclude": [
        "./client/"
    ]
}